
@{
    ViewBag.Title = "GenerarResumenEnvio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-12">
        <h4>
            <i style="margin-right:7px" class="fa fa-users"></i> GENERAR RESUMEN Y ENVIO
        </h4>
    </div>
    <nav class="col-12" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><i class="fa fa-home"></i> <a href="@Url.Action("Principal", "Seguridad")">Principal</a></li>
            <li class="breadcrumb-item active" aria-current="page"><i class="fa fa-users"></i> venta</li>
        </ol>
    </nav>
</div>

<div class="main-card mb-3 card">
    <div class="card-body">
        <div class="form-row">

            <div class="col-lg-3 col-md-3 col-sm-12">
                <div class="form-group">
                    <label>Fecha</label>
                    <input class="form-control" id="fechaInicio" name="fechaInicio" type="text" />
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-12">
                <div class="form-group">
                    <label>Fecha Fin</label>
                    <select class="form-control" id="lstSucursal" name="lstSucursal" type="text"> </select>
                </div>
            </div>
            <div class="col-12">
                <br />
                <div class="float-right">
                    <button class="mb-2 mr-2 btn btn-dashed btn-outline-primary" id="btnFiltrar"><i class="fa fa-filter"></i> Filtrar</button>

                </div>
                <br />
            </div>
            <div class="col-12">
                <input type="hidden" id="hdfId" />
                <div class="table-responsive-sm table-responsive-md" id="dvComprobantes" style="max-height: 400px; overflow-y: auto;">
                    <table class="table table-striped table-bordered" cellspacing="0" style="width:100%" id="tbComprobante">
                        <thead>
                            <tr>
                                <td>Tipo de Documento</td>
                                <th>N&uacute;mero de Comprobante</th>
                                <th>Fecha de Emisi&oacute;n</th> 
                                <th>Grabda</th>
                                <th>Inafecta</th>
                                <th>Exonerada</th>
                                <th>Gratuita</th> 
                                <th>Descuento</th>
                                <th>IGV</th>
                                <th>Total</th>
                                <th><a id="selectAll" style="cursor:pointer;color:blue;" class="seleccionando">Seleccionar todo</a></th>
                            </tr>
                        </thead>
                        <tbody class="text-peq"></tbody>
                    </table>
                    <p id="pHelperProductos" style="margin-top: 5px; font-size: 11px;"></p>
                    <input type="hidden" id="TotalReg" />
                </div>
            </div>

            <div class="col-lg-12">
                <div class="float-right">
                    <button class="mb-2 mr-2 btn btn-dashed btn-outline-warning" id="btnGenerar">Generar Seleccionados</button>
                  
                    <button class="mb-2 mr-2 btn btn-dashed btn-outline-danger" id="btnEnviar">Enviar Seleccionados</button>
                </div>
            </div>

        </div>
    </div>
</div>
@section scripts {
    <script type="text/javascript" src="~/assets/scripts/page/FacturaElectronica/GenerarResumenEnvio.js"></script>
}