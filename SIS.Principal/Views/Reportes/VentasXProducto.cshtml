
@{
    ViewBag.Title = "VentasXProducto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <h4>
            <i style="margin-right:7px" class="fa fa-cubes"></i> RESUMEN DE VENTAS POR PRODUCTO
        </h4>
    </div>
    <nav class="col-12" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><i class="fa fa-home"></i> <a href="@Url.Action("Principal", "Seguridad")">Principal</a></li>
            <li class="breadcrumb-item active" aria-current="page"><i class="fa fa-cubes"></i> Ventas por Producto</li>
        </ol>
    </nav>
</div>

<div class="main-card mb-3 card">
    <div class="card-body">
        <div class="form-row">
            <div class="col-lg-4 col-md-4 col-sm-4 col-12">
                <label>Tipo de Venta</label>
                <div class="form-group">
                    <select class="form-control form-control-sm" id="lstTipoVenta" name="lstTipoVenta">
                        <option value="1" selected>Ventas POS</option>
                        <option value="2">Ventas Regulares</option>
                    </select>
                </div>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-4 col-12">
                <label>Vendedor</label>
                <div class="form-group">
                    <select type="text" class="form-control form-control-sm" id="lstUsuario" name="lstUsuario"></select>
                </div>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-4 col-12">
                <label>Sucursal</label>
                <div class="form-group">
                    <select type="text" class="form-control form-control-sm" id="lstSucursal" name="lstSucursal"></select>
                </div>
            </div>

            <div class="col-lg-6 col-md-6 col-sm-12">
                <label>Buscar</label>
                <div class="form-group">
                    <input class="form-control form-control-sm" id="txtBuscar" name="txtBuscar" type="search" />
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-12">
                <label>Fecha Inicio</label>
                <div class="form-group">
                    <input class="form-control form-control-sm" id="fechaInicio" name="fechaInicio" type="text" autocomplete="off"/>
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-12">
                <label>Fecha Fin</label>
                <div class="form-group">
                    <input class="form-control form-control-sm" id="fechaFin" name="fechaFin" type="text" autocomplete="off"/>
                </div>
            </div>
            <div class="col-12 esp-card">
                <br />
                <div class="float-right">
                    <button class="btn btn-primary" id="btnFiltrar"><i class="fa fa-filter"></i> Filtrar</button>
                    @*<button class="btn btn-danger" id="btnFactura"><i class="fa fa-file-pdf"></i> PDF</button>*@
                    <button class="btn btn-success" id="btnExcel"><i class="fa fa-file-excel"></i> Excel</button>
                </div>
                <br />
            </div>

            <div class="col-12">
                <input type="hidden" id="hdfId" />
                <div class="table-responsive-sm table-responsive-md">
                    <table class="table table-striped table-bordered" cellspacing="0" style="width:100%" id="tbVenta">
                        <thead>
                            <tr class="text-tit" style="border:1px;">
                                <th>Fecha</th>
                                <th>N° Documento</th>
                                <th>Moneda</th>
                                <th>Cliente</th>
                                <th>Código Producto</th>
                                <th>Producto</th>
                                <th>Und. Medida</th>
                                <th>Cantidad</th>
                                <th>Precio</th>
                                <th>Descuento</th>
                                <th>Precio Dscto</th>
                                <th>Importe</th>
                                @*<th>Costo Envío</th>*@
                            </tr>
                        </thead>
                        <tbody class="text-peq"></tbody>
                    </table>
                    <p id="pHelperProductos" style="margin-top: 5px; font-size: 11px;"></p>
                    <input type="hidden" id="TotalReg" />
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-12">

                            <div class="checkbox checkbox-circle checkbox-info peers ai-c">
                                <input type="checkbox" id="IdTotal" name="IdTotal" class="peer" checked>
                                <label for="inputCall1" class="peers peer-greed js-sb ai-c"><span class="peer peer-greed">Todos Registro</span></label>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-12 ">
                            <input type="hidden" id="hdf_Pagina" />
                            <input type="hidden" id="hdf_TotalPagina" />
                            <div class="float-right">
                                <button class="btn btn-secondary" id="btnAnteror"><i class="fa fa-arrow-left"></i> Anterior</button>
                                <Label ID="lblNumPagina"></Label>
                                <button class="btn btn-secondary" id="btnSiguiente"> Siguiente  <i class="fa fa-arrow-right"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal" tabindex="-1" role="dialog" id="Report">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h6 class="modal-title"></h6>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-12">
                        <div id="PDFViewer"></div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">

            </div>
        </div>
    </div>
</div>

@section scripts {
    <script type="text/javascript" src="~/assets/scripts/page/Reportes/VentasXProducto.js"></script>
}

