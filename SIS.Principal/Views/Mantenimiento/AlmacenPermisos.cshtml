
@{
    ViewBag.Title = "AlmacenPermisos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-12">
        <h4>
            <i style="margin-right:7px" class="fa fa-university"></i> ASIGNAR PERMISOS PARA ALMACÉN
        </h4>
    </div>
    <nav class="col-12" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><i class="fa fa-home"></i> <a href="@Url.Action("Principal", "Seguridad")">Principal</a></li>
            <li class="breadcrumb-item active" aria-current="page"><i class="fa fa-university"></i> Permisos</li>
        </ol>
    </nav>
</div>
<div class="row">
    <div class="col-12">
        <div class="form-group pull-right">
            <button class="btn btn-info" id="btnNuevo" data-toggle="modal" data-target="#ModalNuevo"><i class="fa fa-plus"></i> Nuevo</button>
        </div>
    </div>
</div>
<div class="card cont">
    <div class="table-responsive" id="dvCliente">
        <table class="table table-striped table-bordered" style="width:100%" id="tbAlmacen">
            <thead>
                <tr style="border:1px;">
                    <th>Usuario</th>
                    <th>Nro Documento</th>
                    <th>Login</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
    @*------- MODAL --------------*@
    <div class="modal fade animate__animated animate__fadeInDown" id="ModalNuevo" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"> Almacén Permisos</h5>
                    <input type="hidden" id="hdfId" />
                    <input type="hidden" id="hdfFlag" />
                    <button type="button" class="close animate__animated animate__fadeOutUp" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-lg-6 col-12">
                            <label>Usuario</label>
                            <div class="form-group">
                                <div class="input-group">
                                    <select type="text" class="form-control" id="lstUsuario" name="lstUsuario"></select>
                                </div>
                            </div>
                        </div>  
                    </div> 
                    <br />
                    <div class="row">
                        <div class="table-responsive"  style="max-height: 500px; overflow-y: auto;"> 
                            <table class="table table-bordered" id="tbFilAlmacen">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Almacén</th>
                                        <th>Ubicación</th> 
                                        <th><a id="selectAll" style="cursor:pointer;color:blue;" class="seleccionando">Seleccionar todo</a></th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                    <p id="pHelperProductos" style="margin-top: 5px; font-size: 11px;"></p>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary " data-dismiss="modal" id="cerrarpx">cancelar</button>
                        <button type="button" id="btnGrabar" class="btn btn-primary">Grabar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script type="text/javascript" src="~/assets/scripts/page/Mantenimiento/AlmacenPermiso.js"></script>
}
