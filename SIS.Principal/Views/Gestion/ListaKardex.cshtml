@{
    ViewBag.Title = "Kardex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/assets/scripts/jquery-typeahead/jquery.typeahead.min.css" rel="stylesheet" />

<div class="row">
    <div class="col-12">
        <h4>
            <i style="margin-right:7px" class="fa fa-cube"></i>KARDEX VALORIZADO
        </h4>
    </div>
    <nav class="col-12" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><i class="fa fa-home"></i> <a href="@Url.Action("Principal", "Seguridad")">Principal</a></li>
            <li class="breadcrumb-item active" aria-current="page"><i class="fa fa-cube"></i> Kardex Valorizado </li>
        </ol>
    </nav>
</div>
<div class="main-card mb-3 card">
    <div class="card-body">
        <div class="form-row">
            @*<div class="col-lg-6 col-md-6 col-sm-12">
                    <div class="form-group">
                        <label>Busqueda</label>
                        <input class="form-control" id="txtBusqueda" name="txtBusqueda" type="search" />
                    </div>
                </div>*@
            <div class="col-lg-3 col-md-3 col-sm-3 col-sm-12">
                <div class="form-group">
                    <label>Fecha Inicio</label>
                    <input class="form-control" id="txtFechaInicio" name="txtFechaInicio" type="text" autocomplete="off" />
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-3 col-sm-12">
                <div class="form-group">
                    <label>Fecha Fin</label>
                    <input class="form-control" id="txtFechaFin" name="txtFechaFin" type="text" autocomplete="off" />
                </div>
            </div>
            <div class="col-lg-3">
                <div class="form-group">
                    <label>Almacén</label>
                    <select id="lstAlmacen" name="lstAlmacen" class="form-control"></select>
                </div>
            </div>
            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-4 col-12">
                <input type="hidden" id="hdfIdP" />
                <label>Producto</label>
                <div class="form-group">
                    <select id="txtCodProd" type="text" class="form-control form-control-sm no-null ui-autocomplete-input" name="txtCodProd" autocomplete="off"></select>
                </div>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="float-right">
                <button class="btn btn-info" id="btnFiltrar"><i class="fa fa-search"></i> Filtrar</button>
                @*<button class="btn btn-danger" id="btnFactura"><i class="fa fa-file-pdf"></i> PDF</button>*@
                <button type="button" class="btn btn-success" id="btnExcel" name="btnExcel"><i class="fa fa-file-excel"></i> Excel</button>
            </div>
        </div>
        <br /><br />
        <div class="col-12">
            <input type="hidden" id="hdfId" />
            <div class="table-responsive-sm table-responsive-md">
                <table class="table table-striped table-bordered" cellspacing="0" style="width:100%" id="tbKardex">
                    <thead>
                        <tr class="text-tit" style="border:1px;">
                            <th>Fecha</th>
                            <th>Producto</th>
                            <th>Almacén</th>
                            <th>Cantidad Entrada</th>
                            <th>Precio Entrada</th>
                            <th>Costo Entrada</th>
                            <th>Cantidad Salida</th>
                            <th>Precio Salida</th>
                            <th>Costo Salida</th>
                            <th>Total Stock</th>
                        </tr>
                    </thead>
                    <tbody class="text-peq"></tbody>
                </table>
                <p id="pHelperProductos" style="margin-top: 5px; font-size: 11px;"></p>
                <input type="hidden" id="TotalReg" />
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6 col-12">
                        <div class="checkbox checkbox-circle checkbox-info peers ai-c">
                            <input type="checkbox" id="IdTotal" name="IdTotal" class="peer">
                            <label for="inputCall1" class="peers peer-greed js-sb ai-c"><span class="peer peer-greed">Todos Registros</span></label>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6 col-12 ">
                        <input type="hidden" id="hdf_Pagina" />
                        <input type="hidden" id="hdf_TotalPagina" />
                        <div class="float-right">
                            <button class="btn btn-secondary" id="btnAnteror"><i class="fa fa-arrow-left"></i> Anterior</button>
                            <Label ID="lblNumPagina"></Label>
                            <button class="btn btn-secondary" id="btnSiguiente"> Siguiente  <i class="fa fa-arrow-right"></i></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts {
    <script src="~/assets/scripts/jquery-typeahead/jquery.typeahead.min.js"></script>
    <script type="text/javascript" src="~/assets/scripts/page/Gestion/Kardex.js"></script>
}

