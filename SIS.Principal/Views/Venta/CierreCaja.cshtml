@{
    ViewBag.Title = "Cierre de Caja";
}

<div class="row">
    <div class="col-12">
        <h4><i style="margin-right:7px" class="fa fa-users"></i>CIERRE DE CAJA</h4>
    </div>
    <nav class="col-12" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><i class="fa fa-home"></i> <a href="@Url.Action("Principal", "Seguridad")">Principal</a></li>
            <li class="breadcrumb-item active" aria-current="page"><i class="fa fa-users"></i>Cierre de caja</li>
        </ol>
    </nav>
</div>
<div class="row">
    <div class="col-12">
        <label>Fecha de Cierre</label>
        <div class="form-group">
            <div class="input-group">
                <input type="text" id="txtFecha" class="form-control input-sm" readonly />
            </div>
        </div>
    </div>
    <div class="col-12">
        <label>Moneda</label>
        <div class="form-group">
            <div class="input-group">
                <select id="lstMoneda" name="lstMoneda" class="form-control"></select>
            </div>
        </div>
    </div>
    <button type="button" id="btnCerrar" class="btn btn-primary">Cerrar Caja</button>
</div>
<div class="row">
    <div class="col-12">
        <h4>LISTA DE CAJAS (ABIERTAS Y CERRADAS)</h4>
    </div>
</div>
<div class="card cont">
    <div class="table-responsive-sm table-responsive-md" id="dvApertura">
        <table class="table table-striped table-bordered" style="width:100%" id="tbCierre">
            <thead>
                <tr class="text-tit" style="border:1px;">
                    <th>Usuario Apertura</th>
                    <th>Caja</th>
                    <th>Moneda</th>
                    <th>Fecha Apertura</th>
                    <th>Monto Apertura</th>
                    <th>Fecha Cierre</th>
                    <th>Monto Cierre</th>
                    <th>Estado Caja</th>
                </tr>
            </thead>
            <tbody class="text-peq"></tbody>
        </table>
        <p id="pHelperProductos" style="margin-top: 5px; font-size: 11px;"></p>
        <input type="hidden" id="TotalReg" />
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6 col-12">

                <div class="checkbox checkbox-circle checkbox-info peers ai-c">

                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6 col-12 ">
                <input type="hidden" id="hdf_Pagina" />
                <input type="hidden" id="hdf_TotalPagina" />
                <div class="float-right">
                    <button class="btn btn-secondary" id="btnAnterior"><i class="fa fa-arrow-left"></i> Anterior</button>
                    <Label ID="lblNumPagina"></Label>
                    <button class="btn btn-secondary" id="btnSiguiente"> Siguiente  <i class="fa fa-arrow-right"></i></button>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts {
    <script type="text/javascript" src="~/assets/scripts/page/Venta/Cierre.js"></script>
}

